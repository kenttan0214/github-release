{
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "spyOn": true,
        "beforeEach": true,
        "afterEach": true,
        "describe": true,
        "it": true,
        "expect": true,
        "jasmine": true,
        "oDynamicContent": true
    },
    "rules": {
        "no-console":0,
        "strict": 0,
        "quotes": [2, "single"],
        "indent": [2, 4],
        "max-depth": [2, 3],
        "max-statements": [2, 15],
        "complexity": [2, 6],
        "max-params": [2, 3],
        "new-cap": 2,
        "no-bitwise": 2,
        "radix": 2,
        "max-nested-callbacks": [2, 4],
        "no-nested-ternary": 2,
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, "always"],
        "no-underscore-dangle": 0,
        "jsx-quotes": [2, "prefer-single"],
        "no-trailing-spaces": 2,
        "no-multiple-empty-lines": [2, {"max": 3, "maxEOF": 1}],
        "eol-last": 2,
        "semi": [2, "always"]
    }
}
